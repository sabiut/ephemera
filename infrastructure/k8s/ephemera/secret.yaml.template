# Kubernetes Secret for Ephemera
# IMPORTANT: This is a template. The actual secret.yaml with real values
# should NEVER be committed to Git. Add secret.yaml to .gitignore.
#
# To create the actual secret:
# 1. Copy this file: cp secret.yaml.template secret.yaml
# 2. Replace all REPLACE_WITH_* placeholders with actual base64-encoded values
# 3. Apply: kubectl apply -f secret.yaml
#
# To base64 encode a value: echo -n "your-value" | base64

apiVersion: v1
kind: Secret
metadata:
  name: ephemera-secrets
  namespace: ephemera-system
type: Opaque
data:
  # Database connection string (base64 encoded)
  # Example: postgresql://user:pass@host:5432/db
  DATABASE_URL: REPLACE_WITH_BASE64_DATABASE_URL

  # Redis connection string (base64 encoded)
  # Example: rediss://:password@host:6379/0
  REDIS_URL: REPLACE_WITH_BASE64_REDIS_URL

  # Celery broker URL (usually same as REDIS_URL)
  CELERY_BROKER_URL: REPLACE_WITH_BASE64_REDIS_URL

  # Celery result backend (usually same as REDIS_URL)
  CELERY_RESULT_BACKEND: REPLACE_WITH_BASE64_REDIS_URL

  # GitHub App credentials (base64 encoded)
  GITHUB_APP_ID: REPLACE_WITH_BASE64_GITHUB_APP_ID
  GITHUB_APP_CLIENTID: REPLACE_WITH_BASE64_GITHUB_APP_CLIENTID
  GITHUB_WEBHOOK_SECRET: REPLACE_WITH_BASE64_GITHUB_WEBHOOK_SECRET

  # GitHub App private key (base64 encoded PEM file content)
  GITHUB_APP_PRIVATE_KEY: REPLACE_WITH_BASE64_GITHUB_PRIVATE_KEY

  # Application secret key (base64 encoded)
  SECRET_KEY: REPLACE_WITH_BASE64_SECRET_KEY
